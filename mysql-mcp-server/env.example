# Database MCP Server Environment Variables

# Server Configuration
SERVER_NAME=db-mcp-server
SERVER_HOST=127.0.0.1
SERVER_PORT=8000

# Database Configuration
DB_TYPE=mysql                    # Options: mysql, postgresql, sqlite
DB_HOST=localhost               # Database host (not used for SQLite)
DB_PORT=3306                    # Database port (not used for SQLite)
DB_USER=root                    # Database user (not used for SQLite)
DB_PASSWORD=password            # Database password (not used for SQLite)
DB_NAME=my_database             # Database name
DB_PATH=/path/to/database.db    # Database path (for SQLite only)

# Cache Configuration
SCHEMA_CACHE_TTL=3600           # Schema cache TTL in seconds (1 hour)
QUERY_CACHE_TTL=300             # Query cache TTL in seconds (5 minutes)
MAX_QUERY_LIMIT=1000            # Maximum query result limit

# Logging Configuration
LOG_LEVEL=INFO                  # Options: DEBUG, INFO, WARNING, ERROR
