# FileSystem MCP Server Configuration
# Copy this file to .env and update with your actual values

# Server Configuration
SERVER_NAME=filesystem-mcp-server
SERVER_HOST=127.0.0.1
SERVER_PORT=8000

# File System Configuration
BASE_PATH=/path/to/your/directory    # Base directory for file operations
ALLOWED_EXTENSIONS=.txt,.md,.py,.js,.json,.xml,.csv,.log    # Allowed file extensions
MAX_FILE_SIZE=10485760              # Maximum file size in bytes (10MB)
MAX_DIRECTORY_DEPTH=10              # Maximum directory traversal depth
ENABLE_CONTENT_SEARCH=true          # Enable file content search
SEARCH_MAX_RESULTS=100              # Maximum search results

# Security Configuration
RESTRICT_TO_BASE_PATH=true          # Restrict operations to base path only
BLOCKED_PATHS=.git,node_modules,venv,__pycache__    # Blocked directory patterns
ALLOW_HIDDEN_FILES=false            # Allow access to hidden files

# Cache Configuration
SCHEMA_CACHE_TTL=3600               # Schema cache TTL (1 hour)
QUERY_CACHE_TTL=300                 # Query cache TTL (5 minutes)
MAX_CACHE_SIZE=1000                 # Maximum cache entries

# Logging Configuration
LOG_LEVEL=INFO                      # DEBUG, INFO, WARNING, ERROR

# LLM Configuration (Gemini)
GOOGLE_API_KEY=your_google_api_key_here
GEMINI_MODEL_ID=gemini-2.0-flash-exp
GEMINI_TEMPERATURE=0.2
GEMINI_MAX_TOKENS=600

# MCP Client Configuration
MCP_SERVER_URL=http://127.0.0.1:8000/mcp
CLIENT_HOST=0.0.0.0
CLIENT_PORT=8001
