# FileSystem MCP Server Environment Configuration

# Server Configuration
SERVER_NAME=filesystem-mcp-server
SERVER_HOST=127.0.0.1
SERVER_PORT=8000

# FileSystem Configuration
FILESYSTEM_ROOT_PATH=/tmp
FILESYSTEM_MAX_DEPTH=5
FILESYSTEM_INCLUDE_HIDDEN=false
FILESYSTEM_INCLUDE_FILE_CONTENT=false
FILESYSTEM_MAX_FILE_SIZE=1048576
FILESYSTEM_ALLOWED_EXTENSIONS=
FILESYSTEM_EXCLUDED_DIRS=.git,node_modules,__pycache__

# Cache Configuration
STRUCTURE_CACHE_TTL=3600
QUERY_CACHE_TTL=300
MAX_QUERY_LIMIT=1000

# Client Configuration
MCP_SERVER_URL=http://127.0.0.1:8000
CLIENT_HOST=0.0.0.0
CLIENT_PORT=8001

# LLM Configuration (Gemini)
GOOGLE_API_KEY=your_google_api_key_here
GEMINI_MODEL_ID=gemini-2.0-flash-exp
GEMINI_TEMPERATURE=0.2
GEMINI_MAX_TOKENS=600

# Logging
LOG_LEVEL=INFO
