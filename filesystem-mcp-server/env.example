# FileSystem MCP Server Environment Variables

# Server Configuration
SERVER_NAME=filesystem-mcp-server
SERVER_HOST=127.0.0.1
SERVER_PORT=8000

# FileSystem Configuration
FILESYSTEM_ROOT_PATH=/tmp                    # Root directory path
FILESYSTEM_MAX_DEPTH=5                       # Maximum directory depth
FILESYSTEM_INCLUDE_HIDDEN=false              # Include hidden files/directories
FILESYSTEM_INCLUDE_FILE_CONTENT=false        # Include file content in structure
FILESYSTEM_MAX_FILE_SIZE=1048576             # Maximum file size to read (1MB)
FILESYSTEM_ALLOWED_EXTENSIONS=               # Comma-separated allowed extensions (empty = all)
FILESYSTEM_EXCLUDED_DIRS=.git,node_modules,__pycache__  # Comma-separated excluded directories

# Cache Configuration
STRUCTURE_CACHE_TTL=3600                     # Structure cache TTL in seconds (1 hour)
QUERY_CACHE_TTL=300                          # Query cache TTL in seconds (5 minutes)
MAX_QUERY_LIMIT=1000                         # Maximum query result limit

# Logging Configuration
LOG_LEVEL=INFO                               # Options: DEBUG, INFO, WARNING, ERROR
