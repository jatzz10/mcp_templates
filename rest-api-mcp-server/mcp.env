# REST API MCP Server Configuration
# Copy this file to .env and update with your actual values

# Server Configuration
SERVER_NAME=rest-api-mcp-server
SERVER_HOST=127.0.0.1
SERVER_PORT=8000

# REST API Configuration
API_BASE_URL=https://api.example.com/v1    # Base URL for the REST API
API_TIMEOUT=30                             # Request timeout in seconds
API_RETRY_ATTEMPTS=3                       # Number of retry attempts for failed requests
API_RETRY_DELAY=1                          # Delay between retries in seconds

# Authentication Configuration
API_AUTH_TYPE=none                         # none, basic, bearer, api_key, oauth
API_USERNAME=your_username                 # For basic auth
API_PASSWORD=your_password                 # For basic auth
API_TOKEN=your_api_token                   # For bearer token or API key auth
API_KEY_HEADER=X-API-Key                   # Header name for API key
API_KEY_VALUE=your_api_key_value           # API key value

# OAuth Configuration (if using OAuth)
OAUTH_CLIENT_ID=your_client_id
OAUTH_CLIENT_SECRET=your_client_secret
OAUTH_TOKEN_URL=https://api.example.com/oauth/token
OAUTH_SCOPE=read

# Request Configuration
MAX_RESPONSE_SIZE=10485760                 # Maximum response size in bytes (10MB)
ALLOWED_METHODS=GET,POST,PUT,PATCH,DELETE  # Allowed HTTP methods
DEFAULT_HEADERS=Content-Type:application/json,Accept:application/json    # Default headers

# Cache Configuration
SCHEMA_CACHE_TTL=3600                      # Schema cache TTL (1 hour)
QUERY_CACHE_TTL=300                        # Query cache TTL (5 minutes)
MAX_CACHE_SIZE=1000                        # Maximum cache entries

# Security Configuration
ALLOWED_DOMAINS=api.example.com,localhost  # Allowed domains for API calls
BLOCKED_PATHS=/admin,/internal,/private    # Blocked API paths
RATE_LIMIT_REQUESTS=100                    # Rate limit: requests per minute
RATE_LIMIT_WINDOW=60                       # Rate limit window in seconds

# Logging Configuration
LOG_LEVEL=INFO                             # DEBUG, INFO, WARNING, ERROR

# LLM Configuration (Gemini)
GOOGLE_API_KEY=your_google_api_key_here
GEMINI_MODEL_ID=gemini-2.0-flash-exp
GEMINI_TEMPERATURE=0.2
GEMINI_MAX_TOKENS=600

# MCP Client Configuration
MCP_SERVER_URL=http://127.0.0.1:8000/mcp
CLIENT_HOST=0.0.0.0
CLIENT_PORT=8001
