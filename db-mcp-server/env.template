# Generic Database MCP Server Configuration
# Copy this file to .env and update the values

# Database Configuration
DB_TYPE=mysql                    # mysql, postgresql, sqlite
DB_HOST=localhost               # Database host
DB_PORT=3306                    # Database port (MySQL: 3306, PostgreSQL: 5432, SQLite: N/A)
DB_USER=root                    # Database user
DB_PASSWORD=password            # Database password
DB_NAME=my_database             # Database name
DB_PATH=/path/to/database.db    # For SQLite only

# MCP Server Configuration
MCP_SERVER_HOST=0.0.0.0
MCP_SERVER_PORT=8000
MAX_QUERY_LIMIT=1000
SCHEMA_CACHE_TTL=3600

# MCP Client Configuration
MCP_SERVER_URL=http://127.0.0.1:8000/mcp
CLIENT_HOST=0.0.0.0
CLIENT_PORT=8001

# LLM Configuration (Gemini)
GOOGLE_API_KEY=your_google_api_key_here
GEMINI_MODEL_ID=gemini-2.0-flash-exp
GEMINI_TEMPERATURE=0.2
GEMINI_MAX_TOKENS=600

# Logging Configuration
LOG_LEVEL=INFO
