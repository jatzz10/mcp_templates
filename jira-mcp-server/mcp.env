# Jira MCP Server Configuration
# Copy this file to .env and update with your actual values

# Server Configuration
SERVER_NAME=jira-mcp-server
SERVER_HOST=127.0.0.1
SERVER_PORT=8000

# Jira Configuration
JIRA_URL=https://your-domain.atlassian.net    # Your Jira instance URL
JIRA_USERNAME=your-email@domain.com           # Your Jira username/email
JIRA_API_TOKEN=your_jira_api_token            # Your Jira API token
JIRA_PROJECT_KEY=PROJ                         # Default project key to search in

# Jira Query Configuration
MAX_ISSUES_PER_QUERY=100                      # Maximum issues to return per query
DEFAULT_JQL_LIMIT=50                          # Default JQL query limit
ENABLE_JQL_QUERIES=true                       # Enable custom JQL queries
ALLOWED_JQL_FIELDS=summary,description,status,assignee,reporter,created,updated,priority,issuetype    # Allowed JQL fields

# Cache Configuration
SCHEMA_CACHE_TTL=3600                         # Schema cache TTL (1 hour)
QUERY_CACHE_TTL=300                           # Query cache TTL (5 minutes)
MAX_CACHE_SIZE=1000                           # Maximum cache entries

# Security Configuration
RESTRICT_TO_PROJECT=false                     # Restrict queries to specific project
ALLOWED_PROJECTS=PROJ,DEV,TEST                # Allowed project keys (if restricted)
BLOCKED_JQL_KEYWORDS=DELETE,UPDATE,INSERT     # Blocked JQL keywords for security

# Logging Configuration
LOG_LEVEL=INFO                                # DEBUG, INFO, WARNING, ERROR

# LLM Configuration (Gemini)
GOOGLE_API_KEY=your_google_api_key_here
GEMINI_MODEL_ID=gemini-2.0-flash-exp
GEMINI_TEMPERATURE=0.2
GEMINI_MAX_TOKENS=600

# MCP Client Configuration
MCP_SERVER_URL=http://127.0.0.1:8000/mcp
CLIENT_HOST=0.0.0.0
CLIENT_PORT=8001
